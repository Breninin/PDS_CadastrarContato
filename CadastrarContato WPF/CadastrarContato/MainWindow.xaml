<Window x:Class="CadastrarContato.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadastrarContato"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Label Content="Menu Principal" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.264,-0.23" Background="White" FontSize="36" FontFamily="Arial" FontWeight="Bold"/>
        <Button x:Name="btCadastrarContato" Content="Cadastrar Contato" HorizontalAlignment="Center" Margin="0,96,0,0" VerticalAlignment="Top" Foreground="Black" Height="50" Width="224" FontSize="22" RenderTransformOrigin="0.589,0.201" Click="Button_Click"/>
        <Button x:Name="btListarContato" Content="Listar Contato" HorizontalAlignment="Center" Margin="0,167,0,0" VerticalAlignment="Top" Foreground="Black" Height="50" Width="224" FontSize="22" RenderTransformOrigin="0.589,0.201" Click="btListarContato_Click"/>

    </Grid>
</Window>
